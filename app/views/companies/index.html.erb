<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Company number</th>
      <th>Name</th>
      <th>Method of combination</th>
      <th>Reported as</th>
      <th>Functional currency</th>
      <th>Hfm entity code</th>
      <th>Hfm tax entity</th>
      <th>Hfm hv code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.company_number %></td>
        <td><%= company.name %></td>
        <td><%= company.method_of_combination %></td>
        <td><%= company.reported_as %></td>
        <td><%= company.functional_currency %></td>
        <td><%= company.hfm_entity_code %></td>
        <td><%= company.hfm_tax_entity %></td>
        <td><%= company.hfm_hv_code %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

