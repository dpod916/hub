<p id="notice"><%= notice %></p>

<h1>Profit Centers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profit_centers.each do |profit_center| %>
      <tr>
        <td><%= profit_center.name %></td>
        <td><%= link_to 'Show', profit_center %></td>
        <td><%= link_to 'Edit', edit_profit_center_path(profit_center) %></td>
        <td><%= link_to 'Destroy', profit_center, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profit Center', new_profit_center_path %>
