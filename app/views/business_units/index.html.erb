<p id="notice"><%= notice %></p>

<h1>Business Units</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_units.each do |business_unit| %>
      <tr>
        <td><%= business_unit.name %></td>
        <td><%= link_to 'Show', business_unit %></td>
        <td><%= link_to 'Edit', edit_business_unit_path(business_unit) %></td>
        <td><%= link_to 'Destroy', business_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

