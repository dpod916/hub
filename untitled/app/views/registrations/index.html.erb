<p id="notice"><%= notice %></p>

<h1>Registrations</h1>

<table>
  <thead>
    <tr>
      <th>Initial registration date</th>
      <th>Last update date</th>
      <th>Registration status</th>
      <th>Next renewal date</th>
      <th>Local operating unit</th>
      <th>Validation sources</th>
      <th>Legal entity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.initial_registration_date %></td>
        <td><%= registration.last_update_date %></td>
        <td><%= registration.registration_status %></td>
        <td><%= registration.next_renewal_date %></td>
        <td><%= registration.local_operating_unit %></td>
        <td><%= registration.validation_sources %></td>
        <td><%= registration.legal_entity %></td>
        <td><%= link_to 'Show', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

