<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>First line</th>
      <th>Second line</th>
      <th>City</th>
      <th>Region</th>
      <th>Country</th>
      <th>Postal code</th>
      <th>Type</th>
      <th>Legal entity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.first_line %></td>
        <td><%= address.second_line %></td>
        <td><%= address.city %></td>
        <td><%= address.region %></td>
        <td><%= address.country %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.type %></td>
        <td><%= address.legal_entity %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

